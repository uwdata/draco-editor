{
  "compilerOptions": {
    "outDir": "./dist/",
    "module": "es2015",
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "noImplicitAny": true,
    "declaration": false,
    "strictNullChecks": false,
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "files": [
    "src/index.tsx"
  ],
  "include": [
    "typings/*.d.ts"
  ]
}
